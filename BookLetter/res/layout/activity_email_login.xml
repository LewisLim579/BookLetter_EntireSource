<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicgraytwo"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.lewisapp.bookletter.login.EmailLoginActivity" >

    <EditText
        android:id="@+id/editText_id_email"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:layout_marginTop="55dp"
        android:background="@color/mywhitecolor"
        android:ems="10"
        android:hint="  이메일"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="#90000000"
        android:textColorHint="#60586562"
        android:textSize="14sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_id_password"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/mywhitecolor"
        android:ems="10"
        android:hint="  비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
   android:textColor="#90000000"
        android:textColorHint="#60566562"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/minbutton_selector"
        android:text="로그인"
        android:textColor="@color/mywhitecolor"
        android:textSize="13sp" />

    <Button
        android:id="@+id/button_signupgo"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/minbutton_selector"
        android:text="가입하기"
        android:textColor="@color/mywhitecolor"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="65dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
    
        android:text="비밀번호 찾기"
        android:textColorHint="#566562"
        android:textSize="13sp" />

</LinearLayout>