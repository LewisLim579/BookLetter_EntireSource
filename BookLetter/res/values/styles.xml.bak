<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/LetterbookActionBarStyle</item>
        <item name="actionBarSize">300dp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/LetterbookActionBarStyle</item>
        <item name="actionBarSize">50dp</item>
    </style>

    <style name="LetterbookActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_color</item>
        <item name="background">@drawable/actionbar_color</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyTheme.NoTitleBar.SplashWindow" parent="@android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>